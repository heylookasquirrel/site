<html>
  <head>
    <title>Home</title>
      <%- include("sections/header") %>
  </head>
      <%- include("sections/menu") %>
  <body>

    <%- include("sections/sidebar") %>

  <div class="overview">

    <div>
      <canvas id="myChart" width="400" height="300"></canvas>
    </div>
    <div class="stats">

      <div class="totalPosts">
        <h2>Posts</h2>
        <%- stats.totalPosts %>
      </div>

      <div class="totalPosts">
        <h2>Projects</h2>
        <%- stats.totalProjects %>
      </div>

    </div>

  </div>


  </body>

  <%- include("sections/footer") %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
  <script>
  var ctx = document.getElementById("myChart").getContext('2d');
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: [
            <% stats.pages.forEach( page =>{ %>
              "<%- page.url %>"
              ,
            <%}) %>
          ],
          datasets: [{
              label: '# of views',
              data: [
                <% stats.pages.forEach( page =>{ %>
                "<%- page.views %>"
                  ,
                <%}) %>
              ],
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  'rgba(153, 102, 255, 1)',
                  'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });

  </script>

</html>
